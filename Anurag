#include<iostream>
using namespace std;
//#include<conio.h>
class A
{
 private:
      int hra,da,food;
      long int sal,gsal;
 public:
      void get_deta()
      {
       cout<<"Enter Salary : ";
       cin>>sal;
        cout<<"Enter HRA : ";
       cin>>hra;
        cout<<"Enter DA : ";
       cin>>da;
        cout<<"Enter Fod Allowance : ";
       cin>>food;
      
      }
      void put_deta()
      {
       if(sal<=20000)
       {
	    cout<<"Gross Salary : "<<sal<<"  with no DA HRA and food Alowance";
       }
       else if(sal>20000 && sal<=40000)
       {
	    gsal=sal+sal*((hra+da+food)/100);
	    cout<<"Gross Salary : "<<gsal<<"  with 10% DA,3% HRA and 2% food Alowance";
       }
       else if(sal>40000 && sal<=90000)
       {
	   gsal=sal+sal*((hra+da+food)/100);
	   cout<<"Gross Salary : "<<gsal<<"  with 15% DA,6% HRA and 4% food Alowance";
       }
       else if(sal>90000)
       {
       gsal=sal+sal*((hra+da+food)/100);
       cout<<"Gross Salary : "<<gsal<<"  with 20% DA,7% HRA and 8% food Alowance";
       }
       else
       {
	cout<<"Salary Can't be negative";
       }
      }
};
int main()
{
A obj;

//clrscr();
obj.get_deta();
obj.put_deta();
//getch();
return 0;
}
